{
  "name": "@yesiree/htmlc",
  "version": "0.0.10",
  "description": "A simple tool for compiling HTML files",
  "type": "module",
  "files": [
    "./lib/cli.js",
    "./lib/index.js",
    "./lib/utils.js"
  ],
  "main": "./lib/index.js",
  "bin": "./lib/cli.js",
  "scripts": {
    "test-watch": "node lib/cli.js -m -c -w -s test/src/ -d .ignore/",
    "example": "node lib/cli.js -m -c -i -o **/*.txt -s test/src/ -d .ignore/ ",
    "compare": "node test/equals.js .ignore/index.html test/expected.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yesiree/htmlc.git"
  },
  "keywords": [
    "html",
    "compile",
    "minify",
    "css",
    "sass",
    "scss",
    "style",
    "script",
    "javascript",
    "js"
  ],
  "author": "Trevor Reed",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yesiree/htmlc/issues"
  },
  "homepage": "https://github.com/yesiree/htmlc#readme",
  "dependencies": {
    "chalk": "^5.0.1",
    "chokidar": "^3.5.2",
    "fast-glob": "^3.2.11",
    "html-minifier": "^4.0.0",
    "js-beautify": "^1.14.7",
    "jsdom": "^20.0.0",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.7",
    "mkdirp": "^1.0.4",
    "sass": "^1.53.0",
    "terser": "^5.16.1"
  }
}
